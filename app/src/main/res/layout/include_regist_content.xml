<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="40dp"
    android:background="@drawable/biankuang"
    android:paddingTop="40dp">

    <RelativeLayout
        android:background="@drawable/btn_shape"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/edit_regist_phone"
            android:maxLength="11"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:numeric="integer"
            android:hint="输入手机号" />

        <com.my.zhou.group.view.DrawableCenterButton
            android:id="@+id/drawablebtn_code"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_common_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:textSize="12sp"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_regist_code"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:background="@drawable/btn_shape"
        android:maxLength="10"
        android:textSize="16sp"
        android:hint="输入验证号" />

    <EditText
        android:id="@+id/edit_regist_password1"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:background="@drawable/btn_shape"
        android:hint="设置账号密码" />

    <EditText
        android:id="@+id/edit_regist_password2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:background="@drawable/btn_shape"
        android:hint="确认账号密码" />

