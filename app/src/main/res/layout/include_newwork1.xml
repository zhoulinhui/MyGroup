<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_newwork_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/take2" />

            <LinearLayout
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_newwork_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="商家名称" />

                <TextView
                    android:id="@+id/text_newwork_store_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_newwork_put"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/song" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/text_newwork_user_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:text="地址" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/image_join_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@mipmap/right" />
</LinearLayout>